{
  "version": 2,
  "builds": [{ "src": "index.html", "use": "@vercel/node" }],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/(.*\\.(css|js|png|jpg|jpeg|svg|ico|gif|webp|txt))", "dest": "/$1" },
    { "src": "/public/(.*)", "dest": "/public/$1" },
    { "src": "/api/(.*)", "dest": "/index.js" },
    { "src": "/(.*)", "dest": "/index.js" }
  ]
}
